# my project space
export PROJECTS=$HOME/projects

# Very simple PATH to begin with
PATH=/bin:/sbin:/usr/bin:/usr/sbin

# Run all profile scripts first
this=`readlink $0`
if [ ! "$this" ]; then
  mydir=`dirname $0`
elif [ ! "${this##/*}" ]; then
  mydir="$(dirname $this)"
else
  mydir="`dirname $0`/$(dirname $this)"
fi
for file in $mydir/*.sh; do
  if [ -r $file ]; then
    . $file
  fi
done

for file in $ZSH/*/environ.sh; do
  if [ -r "$file" ]; then
    . $file
  fi
done